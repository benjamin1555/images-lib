<div class="row d-flex justify-content-center">
  <div class="col-lg-6 col-sm-12">
    <div class="card mt-3 mb-5 p-4">
        <form action="/search-images" method="POST">
          <div class="input-group">
            <select id="searchFilter" name="searchFilter" class="form-control btn btn-outline-primary dropdown-toggle">
              <option selected>Tags</option>
              <option>Title</option>
            </select>
            <input type="text" class="form-control  w-50" name="queryString" id="queryString" placeholder="Search images">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="input-group-append">
              <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
    </div>
  </div>
</div>