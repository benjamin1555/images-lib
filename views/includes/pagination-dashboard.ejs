<div class="pagination-container d-flex justify-content-center my-3">
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>"><a class="page-link" href="/dashboard/?page=<%= previousPage %>">Previous</a></li>
      <% if (currentPage !== 1) { %>
        <li class="page-item"><a class="page-link" href="/dashboard/?page=1">1</a></li>
      <% } %>
      <% if (hasPreviousPage && previousPage !== 1) { %>
        <li class="page-item"><a class="page-link" href="/dashboard/?page=<%= previousPage %>"><%= previousPage %></a></li>
      <% } %>
      <li class="page-item active"><a class="page-link" href="/dashboard/?page=<%= currentPage %>"><%= currentPage %></a></li>
      <% if (hasNextPage && nextPage !== lastPage) { %>
        <li class="page-item"><a class="page-link" href="/dashboard/?page=<%= nextPage %>"><%= nextPage %></a></li>
      <% } %>
      <% if (currentPage !== lastPage) { %>
        <li class="page-item"><a class="page-link" href="/dashboard/?page=<%= lastPage %>"><%= lastPage %></a></li>
      <% } %>
      <li class="page-item <%= currentPage === lastPage ? 'disabled' : '' %>"><a class="page-link" href="/dashboard/?page=<%= nextPage %>">Next</a></li>
    </ul>
  </nav>
</div>